<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:BarMenuApp.ViewModels"
			 x:Class="BarMenuApp.Views.MenuDetailPage"
			 x:DataType="vm:MenuDetailViewModel">
	<ScrollView>
		<VerticalStackLayout Margin="12">
			<Label Text="{Binding Item.Name}" FontSize="Header" />
			<Label Text="{Binding Item.Description}" FontSize="Default" />
			<Label Text="{Binding Item.Ingredients}"/>
			<Label Text="{Binding Item.Ingredients}"/>
            <Button Text="Add to your drinks" WidthRequest="100" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MenuDetailViewModel}}, Path=AddDrink }"  CommandParameter="{Binding .}"/>
        </VerticalStackLayout>
	</ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:BarMenuApp.ViewModels"
			 x:Class="BarMenuApp.Views.MenuDetailPage"
			 x:DataType="vm:MenuDetailViewModel">
	<StackLayout>
		<VerticalStackLayout Margin="12">
			<Label Text="{Binding Item.Name}" FontSize="Header" />
			<Label Text="{Binding Item.Description}" FontSize="Default" />
			<Label Text="{Binding Item.Ingredients}"/>
        </VerticalStackLayout>
		<HorizontalStackLayout Margin="12">
			<Button Text="Favorite" WidthRequest="100" Margin="10,10,10,10" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MenuDetailViewModel}}, Path=AddDrink }"  CommandParameter="{Binding .}" IsEnabled="{Binding Path=FavoriteDrinkEnabled}"/>
			<Button Text="Unfavorite" WidthRequest="100" Margin="10,10,10,10" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MenuDetailViewModel}}, Path=RemoveDrink }"  CommandParameter="{Binding .}" IsEnabled="{Binding Path=RemoveDrinkEnabled}"/>
		</HorizontalStackLayout>
	</StackLayout>

</ContentPage>
